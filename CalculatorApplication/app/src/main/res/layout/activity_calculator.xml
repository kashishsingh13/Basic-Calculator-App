<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454C53"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/buttonlayout"
        android:layout_marginBottom="70dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:focusable="true"
            android:scrollHorizontally="true"
            android:cursorVisible="true"
            android:verticalScrollbarPosition="right"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textAlignment="viewEnd"
            android:textSize="50dp"
            android:textStyle="bold"
            android:id="@+id/inputnumber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:ellipsize="end"
            android:textColor="#D2CECE"
            android:focusable="false"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textAlignment="viewEnd"
            android:textSize="50dp"
            android:textStyle="bold"
            android:id="@+id/result"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_clear"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="C"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/btn_seven"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_four"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_one"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_doublezero"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="00"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_persent"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/btn_eight"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="8"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_five"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_two"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_zero"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_backspace"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text=""
                android:textSize="30dp"
                android:drawableTop="@drawable/baseline_backspace_24"
                android:drawableTint="@color/white"
                android:paddingTop="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/btn_nine"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="9"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_six"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_three"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_dout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="."
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_div"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="รท"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/btn_multiple"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="*"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_muness"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn_equal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="="
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">

            </android.widget.Button>



        </LinearLayout>


    </LinearLayout>



</RelativeLayout>